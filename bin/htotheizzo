#!/bin/bash
set -e

help() {
	echo "htotheizzo - a simple script that makes updating/upgrading apt, gems, pip and node packages so much easier"
}

update() {
	echo "htotheizzo is running the update function"
}

main() {
	local arg=$1
	if [[ ! -z "$arg" ]]; then
		help
	else
		update
	fi
}

main "$@"
